if !user
	#Login.modal.fade(tab-index='-1' role='dialog')
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') &times;
					h4 Log In
				.modal-body
					form.form-horizontal(action='/auth/local', method='POST')
						.form-group
							label.col-sm-2.control-label(for='LoginEmail') Email
							.col-sm-10
								input#LoginEmail.form-control(placeholder='Email', type='email', name='email')
						.form-group
							label.col-sm-2.control-label(for='LoginPassword') Password
							.col-sm-10
								input#LoginPassword.form-control(placeholder='Password', type='password', name='password')
						.form-group
							.col-sm-10.col-sm-offset-2
								button#LoginSubmit.btn.btn-primary Login
					//.text-wings
						hr
						span OR
						hr
					//h4 Sign Up
					//form.form-horizontal(action='/auth/signup', method='POST')
						.form-group
							label.col-sm-2.control-label(for='SignUpFirstName') First Name
							.col-sm-10
								input#SignUpFirstName.form-control(placeholder='First Name', type='text', name='name.first')
						.form-group
							label.col-sm-2.control-label(for='SignUpLastName') Last Name
							.col-sm-10
								input#SignUpLastName.form-control(placeholder='Last Name', type='text', name='name.last')
						.form-group
							label.col-sm-2.control-label(for='SignUpEmail') Email
							.col-sm-10
								input#SignUpEmail.form-control(placeholder='Email', type='email', name='local.email')
						.form-group
							label.col-sm-2.control-label(for='SignUpPassword') Password
							.col-sm-10
								input#SignUpPassword.form-control(placeholder='Password', type='password', name='local.password')
						.form-group
							.col-sm-10.col-sm-offset-2
								button#LoginSubmit.btn.btn-primary Login
					
				.modal-footer
					button.btn.btn-default(data-dismiss='modal') Close

