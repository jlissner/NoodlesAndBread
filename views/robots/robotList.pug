.form-group(duck-type='array', duck-field= name)
	label.col-sm-2.control-label= title || name
	.col-sm-10
		div
			for v in values ? values : [null]
				.array-item(duck-type='select')
					.input-group
						.input-group-addon(data-sort='handle')
							i.fa.fa-arrows-v(aria-hidden='true')
						select.form-control(duck-value, required= required)
							option(value= factory && factory.Id)= factory ? 'Sibling' : 'This shouldn\'t be used like this :('
							for _facotry in (factory && factories) ? factories : []
								option(value= _facotry.Id)= _facotry.name
						.input-group-btn
							button.btn.btn-danger(duck-button='delete')
								i.fa.fa-times(aria-hidden='true')
		p.text-right
			button.btn.btn-primary(duck-button='add') Add #{name}